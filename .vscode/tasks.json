{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MultiAgent: Generate Code",
            "type": "shell", 
            "command": "pwsh",
            "args": [
                "-Command",
                "& { $task = Read-Host 'Describe what to generate'; $domain = Read-Host 'Domain (backend/frontend/testing/optimization/documentation/mobile/database)'; .\\scripts\\ma.ps1 generate \"$task\" $domain }"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "MultiAgent: Review Current File",
            "type": "shell",
            "command": "pwsh", 
            "args": [
                "-Command",
                ".\\scripts\\ma.ps1 review \"${file}\" --scpo"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "MultiAgent: Execute Current File (Dry Run)",
            "type": "shell",
            "command": "pwsh",
            "args": [
                "-Command", 
                ".\\scripts\\ma.ps1 execute \"${file}\" --dry-run"
            ],
            "group": "test",
