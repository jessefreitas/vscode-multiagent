{
  "python.defaultInterpreterPath": "./venv/Scripts/python.exe",
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.autopep8Enabled": true,
  "python.testing.pytestEnabled": true,
  "python.analysis.extraPaths": [
    "./src"
  ],
  "python.analysis.autoImportCompletions": true,
  "multiagent.project.language": "python",
  "multiagent.project.initialized": false,
  "multiagent.project.type": "generic",
  "multiagent.project.createdAt": "",
  "chat.mcp.servers": {
    "memory": {
      "args": [
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_STORAGE_PATH": "./mcp-memory.db"
      },
      "command": "npx"
    }
  },
  "chat.mcp.autostart": "newAndOutdated",
  
  // ü§ñ CONFIGURA√á√ïES GITHUB COPILOT - SISTEMA MULTIAGENT
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "powershell": true,
    "python": true,
    "javascript": true,
    "typescript": true
  },
  
  // ‚ö° FOR√áA COPILOT A SEMPRE USAR CONTEXTO DO PROJETO
  "github.copilot.chat.includeCodeSelection": true,
  "github.copilot.chat.includeWorkspaceContext": true,
  "github.copilot.chat.includeHistory": true,
  "github.copilot.chat.useProjectTemplates": true,
  "github.copilot.advanced": {
    "length": 10000,
    "temperature": 0.3,
    "top_p": 1,
    "inlineSuggestCount": 5
  },
  
  // üî• CARREGAMENTO AUTOM√ÅTICO DE CONTEXTO
  "github.copilot.referencesInChat": "on",
  "github.copilot.chat.welcomeMessage": "never",
  
  // Configura√ß√µes de contexto espec√≠ficas
  "files.associations": {
    "*.copilot-instructions.md": "markdown",
    "*.copilot-contexto-ativo.md": "markdown",
    "prompts/*.md": "markdown",
    ".copilot-*": "markdown"
  },
  
  // üî• ARQUIVOS SEMPRE INCLU√çDOS NO CONTEXTO
  "files.readonlyInclude": {
    ".copilot-contexto-ativo.md": true,
    ".copilot-instructions.md": true,
    "CONTEXTO-COPILOT.md": true
  },
  
  // Inclui arquivos importantes no contexto
  "search.useGlobalSearchResult": true,
  "workbench.editor.enablePreview": true,
  
  // For√ßa abertura de arquivos essenciais
  "workbench.startupEditor": "readme",
  
  // Coment√°rios especiais para Copilot
  "editor.comments.insertSpace": true,
  "editor.suggest.showConstants": true,
  "editor.suggest.showWords": true
}
