{
  "name": "scpo-toolkit",
  "displayName": "SCPO - Sistema de Cadeia de Pensamento Operacional",
  "description": "Toolkit para economia de tokens e prompts estruturados no VS Code",
  "version": "1.0.0",
  "publisher": "omniforge",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Snippets",
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "copilot",
    "prompts",
    "tokens",
    "scpo",
    "productivity"
  ],
  "activationEvents": [
    "onCommand:scpo.generateBrief",
    "onCommand:scpo.optimizePrompt",
    "onCommand:scpo.analyzeTokens",
    "onLanguage:php",
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scpo.generateBrief",
        "title": "Generate Task Brief",
        "category": "SCPO"
      },
      {
        "command": "scpo.optimizePrompt",
        "title": "Optimize Prompt for Tokens",
        "category": "SCPO"
      },
      {
        "command": "scpo.analyzeTokens",
        "title": "Analyze Token Usage",
        "category": "SCPO"
      },
      {
        "command": "scpo.insertTemplate",
        "title": "Insert SCPO Template",
        "category": "SCPO"
      },
      {
        "command": "scpo.cacheManagement",
        "title": "Manage Semantic Cache",
        "category": "SCPO"
      },
      {
        "command": "scpo.vibecoding",
        "title": "Open Vibecoding Library",
        "category": "SCPO"
      }
    ],
    "keybindings": [
      {
        "command": "scpo.generateBrief",
        "key": "ctrl+shift+s ctrl+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "scpo.optimizePrompt",
        "key": "ctrl+shift+s ctrl+shift+o",
        "when": "editorTextFocus"
      },
      {
        "command": "scpo.vibecoding",
        "key": "ctrl+shift+s ctrl+shift+v",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "scpo.submenu",
          "group": "scpo",
          "when": "editorTextFocus"
        }
      ],
      "scpo.submenu": [
        {
          "command": "scpo.generateBrief",
          "group": "1_generate"
        },
        {
          "command": "scpo.optimizePrompt",
          "group": "1_generate"
        },
        {
          "command": "scpo.insertTemplate",
          "group": "2_templates"
        }
      ]
    },
    "submenus": [
      {
        "id": "scpo.submenu",
        "label": "SCPO Tools"
      }
    ],
    "configuration": {
      "title": "SCPO Configuration",
      "properties": {
        "scpo.apiUrl": {
          "type": "string",
          "default": "http://localhost:5678/webhook/scpo",
          "description": "URL da API SCPO (n8n webhook)"
        },
        "scpo.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key para autenticação (opcional)"
        },
        "scpo.enableCache": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar cache semântico local"
        },
        "scpo.tokenLimit": {
          "type": "number",
          "default": 4000,
          "description": "Limite máximo de tokens por prompt"
        },
        "scpo.showTokenCount": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar contador de tokens na status bar"
        },
        "scpo.autoOptimize": {
          "type": "boolean",
          "default": false,
          "description": "Otimizar prompts automaticamente"
        },
        "scpo.defaultLanguage": {
          "type": "string",
          "enum": [
            "php",
            "typescript",
            "javascript",
            "python",
            "java",
            "csharp"
          ],
          "default": "php",
          "description": "Linguagem padrão para templates"
        }
      }
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/scpo-prompts.json"
      },
      {
        "language": "markdown",
        "path": "./snippets/specialized-scpo.json"
      },
      {
        "language": "php",
        "path": "./snippets/php-scpo.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/ts-scpo.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/ts-scpo.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/js-scpo.json"
      },
      {
        "language": "python",
        "path": "./snippets/python-scpo.json"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "scpoExplorer",
          "name": "SCPO Toolkit",
          "when": "scpo.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scpo",
          "title": "SCPO",
          "icon": "$(robot)"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "watch": "webpack --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "babel-loader": "^10.0.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "crypto": "^1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/omniforge/scpo-vscode"
  },
  "license": "MIT"
}
